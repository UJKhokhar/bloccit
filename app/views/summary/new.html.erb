<h1>Post Summary</h1>

<%= form_for @summary do |f| %>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :description, class: 'form_control', placeholder: "Enter summary" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>